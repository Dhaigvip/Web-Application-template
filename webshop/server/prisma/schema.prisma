generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AttributeType {
  ENUM
  NUMBER
  BOOLEAN
  TEXT
}

model Product {
  id          String   @id @default(uuid())
  slug        String   @unique
  name        String
  description String?
  imageUrl    String?
  priceCents  Int      @default(0) // ✅ NEW
  currency    String   @default("SEK") // ✅ NEW
  isActive    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  categories ProductCategory[]
  attributes ProductAttribute[]

  // ✅ add these
  cartItems  CartItem[]
  orderItems OrderItem[]

  @@index([isActive])
}

model Category {
  id       String     @id @default(uuid())
  parentId String?
  parent   Category?  @relation("CategoryParent", fields: [parentId], references: [id], onDelete: Restrict)
  children Category[] @relation("CategoryParent")

  slug      String
  name      String
  path      String  @unique
  level     Int
  sortOrder Int     @default(0)
  isActive  Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products ProductCategory[]

  @@index([parentId])
  @@index([slug])
  @@index([path])
}

model ProductCategory {
  productId  String
  categoryId String
  isPrimary  Boolean @default(false)

  product  Product  @relation(fields: [productId], references: [id], onDelete: Restrict)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Restrict)

  @@id([productId, categoryId])
  @@index([categoryId, productId])
  @@index([productId, categoryId])
}

model Attribute {
  id           String        @id @default(uuid())
  code         String        @unique
  name         String
  type         AttributeType
  isFilterable Boolean       @default(true)
  isFacetable  Boolean       @default(true)
  sortOrder    Int           @default(0)
  createdAt    DateTime      @default(now())

  values   AttributeValue[]
  products ProductAttribute[]

  @@index([code])
}

model AttributeValue {
  id          String @id @default(uuid())
  attributeId String
  value       String
  label       String
  sortOrder   Int    @default(0)

  attribute Attribute          @relation(fields: [attributeId], references: [id], onDelete: Restrict)
  products  ProductAttribute[]

  @@unique([attributeId, value])
  @@index([attributeId])
}

model ProductAttribute {
  productId        String
  attributeId      String
  attributeValueId String?
  valueNumber      Float?
  valueBoolean     Boolean?
  valueText        String?

  product        Product         @relation(fields: [productId], references: [id], onDelete: Restrict)
  attribute      Attribute       @relation(fields: [attributeId], references: [id], onDelete: Restrict)
  attributeValue AttributeValue? @relation(fields: [attributeValueId], references: [id], onDelete: Restrict)

  @@id([productId, attributeId])
  @@index([attributeId])
  @@index([attributeId, attributeValueId])
  @@index([attributeId, valueNumber])
  @@index([productId])
}

enum AdminRole {
  SUPER_ADMIN
  CATALOG_ADMIN
  CONTENT_EDITOR
}

model AdminUser {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  role      AdminRole
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
}

model Cart {
  id        String   @id @default(uuid())
  userId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items CartItem[]

  @@index([userId])
}

model CartItem {
  id        String @id @default(uuid())
  cartId    String
  productId String
  quantity  Int

  cart    Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@unique([cartId, productId])
}

enum OrderStatus {
  PENDING_PAYMENT
  PAID
  CANCELLED
  PAYMENT_FAILED
}

model Order {
  id         String      @id @default(uuid())
  userId     String?
  status     OrderStatus @default(PENDING_PAYMENT)
  currency   String
  totalCents Int
  createdAt  DateTime    @default(now())

  items    OrderItem[]
  payments Payment[]
}

model OrderItem {
  id             String  @id @default(uuid())
  orderId        String
  productId      String
  name           String // snapshot
  unitPriceCents Int // snapshot
  quantity       Int
  imageUrl       String? // snapshot (optional)

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)
}

enum PaymentStatus {
  INITIATED
  SUCCEEDED
  FAILED
}

model Payment {
  id                    String        @id @default(uuid())
  orderId               String
  provider              String // "stripe"
  status                PaymentStatus @default(INITIATED)
  amountCents           Int
  currency              String
  stripePaymentIntentId String?       @unique
  rawEvent              Json?
  createdAt             DateTime      @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
}
